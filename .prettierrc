{
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.vue",
      "options": {
        "parser": "vue",
        "semi": false
      }
    },

    {
      "files": [".prettierrc", "*.json"],
      "options": {
        "parser": "json"
      }
    },

    {
      "files": "*.php",
      "options": {
        "phpVersion": "7.4",
        "braceStyle": "psr-2",
        "tabWidth": 4
      }
    },

    {
      "files": ["*.php", "*.blade.php"],
      "options": {
        "printWidth": 80
      }
    },

    {
      "files": "*.blade.php",
      "options": {
        "sortTailwindcssClasses": true,
        "tabWidth": 2
      }
    },

    {
      "files": ["*.php", "*.vue"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
